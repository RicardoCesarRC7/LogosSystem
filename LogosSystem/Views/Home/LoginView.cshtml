
@{
    ViewBag.Title = "LoginView";
}

<div class="container bg-light" style="width: 600px;" ng-controller="LoginPageController as controller">
    <div class="col-lg-12 text-center mt-lg-5">
        <img src="~/Content/Images/Logos-160.png" />
    </div>
    <div class="card card-login mx-auto mt-5 mb-5">
        <div class="card-header">
            Login
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label class="control-label">E-mail</label>
                    <input type="text" class="form-control col-lg-12" id="email" />
                </div>
                <div class="form-group">
                    <label class="control-label">Senha</label>
                    <input type="password" class="form-control col-lg-12" id="senha" />
                </div>
                <button class="btn btn-primary btn-block">Entrar</button>
            </form>
        </div>
    </div>
</div>

@section scriptsSection {
    <script src="~/Scripts/App/login-page/login-page.controller.js"></script>
}
